#!/bin/sh

deploy_to() {
  env=${1:-staging}

  echo "#"
  echo "# Deploying to ${env}"
  echo "#"

  yarn install && yarn build && bundle install && bundle exec s3_website push --config-dir deploy/${env}
}

case $1 in
  all             ) deploy_to "staging" && deploy_to "production";;
  prod            ) deploy_to "production";;
  *               ) deploy_to $1;;
esac
